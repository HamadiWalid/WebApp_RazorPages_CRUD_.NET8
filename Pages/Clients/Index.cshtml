@page "/ClientList"
@model WebApp_RazorPages_.NetCore8.Pages.Clients.IndexModel
@{
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Client List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Create
            </a>
        </div>
    </div>

    <br /><br />

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CreatedAt</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>PhoneNumber</th>
                    <th>Email</th>
                    <th>Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.Clients)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>@obj.Name</td>
                        <td>@obj.Address</td>
                        <td>@obj.PhoneNumber</td>
                        <td>@obj.Email</td>
                        <td>@obj.Order</td>
                    
                       @*  <td>
						<div class="w-75 btn-group" role="group">
						<a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a asp-page="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i>
						</a>
						</div>
					</td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
